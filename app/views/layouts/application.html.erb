<!DOCTYPE html>

<html>
 <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/e576961936.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 </head>

<body>
 <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to "Bookers", root_path, class: "navbar-brand text-white" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="#navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

   <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to user_session_path, class: "nav-link text-white" do %>
        <i class="fas fa-home"></i>Home
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to users_path, class: "nav-link text-white" do %>
        <i class="fas fa-users"></i>Users
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= link_to books_path, class: "nav-link text-white" do %>
        <i class="fas fa-book-open"></i>Books
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
        <i class="fas fa-sign-out-alt"></i>Log out
        <% end %>
      </li>
      <% else %>
      <li class="nav-item active">
        <%= link_to root_path, class: "nav-link text-white" do %>
        <i class="fas fa-home"></i>Home
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to about_path, class: "nav-link text-white" do %>
        <i class="fas fa-link"></i>About
        <% end %>
      </li>
      <li class="nav-item dropdown">
        <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
        <i class="fas fa-user-plus"></i>Sign up
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_user_session_path, class: "nav-link text-white" do %>
        <i class="fas fa-sign-in-alt"></i>Log in
        <% end %>
      </li>
      <% end %>
    </ul>
   </div>
  </nav>
 </header>

 <main class="container"><%= yield %></main>

 <footer class="container">
   <p class="text-center">CopyRight Infratop.inc</p>
 </footer>
</body>
</html>