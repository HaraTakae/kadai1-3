  <div>
   <%= flash[:notice] %>
  </div>

 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <!-- 画像 -->
     <%= image_tag @user.get_profile_image(100,100) %>

     <table class="table">
      <tr>
       <th>name</th>
       <th><%= @user.name %></th>
      </tr>
    <!-- 自己紹介文 -->
      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
     </table>

   <div class="row">
     <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
     <% end %>
   </div>

    <h2 class="mt-3">New book</h2>
     <div class="form-group">
       <%= form_with model: @books do |f| %>
        <label for="book_title">Title</label><br>
       <%= f.text_field :title, class: 'form-control' %>
        <label for="book_body">Opinion</label><br>
       <%= f.text_area :body, class: 'form-control' %>
        <p><%= f.submit 'Create Book', class: "btn btn-success" %></p>
       <% end %>
     </div>
   </div>

  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
      <th>

          <%= image_tag current_user.get_profile_image(100,100) %><br>
          <%= link_to @user.name, user_path(@user.id) %></th>
      <th><%= link_to @book.title, book_path %></th>
      <th><%= @book.body %></th>
      <% if @book.user == current_user %>
      <th><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></th>
      <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></th>
      <% end %>
     </tr>
    </tbody>
   </table>
   </div>
  </div>
 </div>