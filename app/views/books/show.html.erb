  <h2>User info</h2>
    <!-- 画像 -->
    <%= image_tag current_user.get_profile_image(100,100) %>
   <table class="table">
    <tr>
     <th>name</th>
     <th><%= current_user.name %></th>
    </tr>
    <!-- 自己紹介文 -->
    <tr>
     <th>introduction</th>
     <th><%= current_user.introduction %></th>
    </tr>
   </table>

   <div>
    <% if @user == current_user %>
     <%= link_to edit_user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    <% else %>
     <%= link_to user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    <% end %>
   </div>

   <h2>New book</h2>
   <%= form_with model: @user,url: '/books/:id', method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :opinion %>
    <p><%= f.submit 'Create Book' %></p>
   <% end %>

   <h2>Book detail</h2>
  <table>
   <tbody>
    <% @book.each do |book| %>
     <tr>
      <th><%= image_tag current_user.get_profile_image(100,100) %><br>
      <th><%= book.name %></th>
      <th><%= book.title %></th>
      <th><%= book.opinion %></th>
     </tr>
    <% end %>
    <%= link_to "Destroy", destroy_book_path(@book.id), method: :delete %>
   </tbody>
  </table>