<div>
 <%= flash[:notice] %>
</div>

 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <!-- 画像 -->
    <%= image_tag current_user.get_profile_image(100,100) %>

   <table class="table">
    <tr>
     <th>name</th>
     <th><%= current_user.name %></th>
    </tr>
    <!-- 自己紹介文 -->
    <tr>
     <th>introduction</th>
     <th><%= current_user.introduction %></th>
    </tr>
   </table>

   <div class="row">
      <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
   </div>

   <h2 class="mt-3">New book</h2>
     <div class="form-group">
      <%= form_with model: @book do |f| %>
       <label for="book_title">Title</label><br>
      <%= f.text_field :title, class: 'form-control' %>
       <label for="book_body">Opinion</label><br>
      <%= f.text_area :body, class: 'form-control' %>
       <p><%= f.submit 'Create Book', class: "btn btn-success" %></p>
      <% end %>
     </div>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
     <thead>
      <tr>
       <th>image</th>
       <th>name</th>
       <th colspan="3"></th>
      </tr>
     </thead>

     <tbody class="table">
      <% @users.each do |user| %>
       <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>