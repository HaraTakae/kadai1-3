
<div>
 <%= flash[:notice] %>
</div>

    <h2>User info</h2>
    <!-- 画像 -->
    <%= image_tag @user.get_profile_image(100,100) %>
   <table class="table">
    <tr>
     <th>name</th>
     <th><%= @user.name %></th>
    </tr>
    <!-- 自己紹介文 -->
    <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
    </tr>
   </table>

   <div>
    <% if @user == current_user %>
     <%= link_to edit_user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    <% else %>
     <%= link_to user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    <% end %>
   </div>

   <h2>New book</h2>
   <%= form_with model: @user do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :opinion %>
    <p><%= f.submit 'Create Book' %></p>
   <% end %>

   <h2>Books</h2>
   <table>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </table>