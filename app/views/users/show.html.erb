
<div>
 <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <!-- 画像 -->
    <%= image_tag @user.get_profile_image(100,100) %>

   <table class="table">
    <tr>
     <th>name</th>
     <th><%= @user.name %></th>
    </tr>
    <!-- 自己紹介文 -->
    <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
    </tr>
   </table>

    <div class="row">
    <% if @user == current_user %>
      <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    <% else %>
      <%= link_to user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    <% end %>
    </div>

   <h2 class="mt-3">New book</h2>
   <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :opinion %>
    <p><%= f.submit 'Create Book' %></p>
   <% end %>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class="table">
    <thead>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
    </thead>

    <tbody class="table">
     <% @books.each do |book| %>
      <tr>
       <td><%= image_tag current_user.get_profile_image(100,100) %></td>
       <td><%= link_to book.title, book_path(book) %></td>
       <td><%= book.opinion %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
   </div>
   </div>
  </div>