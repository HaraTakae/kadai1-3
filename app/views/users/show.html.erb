
<div>
 <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <h2>User info</h2>
    <!-- 画像 -->
    <%= image_tag @user.get_profile_image(100,100) %>

   <table class="table">
    <tr>
     <th>name</th>
     <th><%= @user.name %></th>
    </tr>
    <!-- 自己紹介文 -->
    <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
    </tr>
   </table>

    <% if @user == current_user %>
     <%= link_to edit_user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    <% else %>
     <%= link_to user_path(current_user) do %>
      <i class="fa-solid fa-user-gear"></i>
     <% end %>
    <% end %>

   <h2>New book</h2>
   <%= form_with model: @book do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :opinion %>
    <p><%= f.submit 'Create Book' %></p>
   <% end %>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table>
    <tr>
     <th>Title</th>
     <th>Opinion</th>
     <th colspan="3"></th>
    </tr>
   </table>

   <tbody>
    <% @books.each do |book| %>
     <th><%= image_tag current_user.get_profile_image(100,100) %></th>
  　　<th><%= link_to book.title, book_path(book) %></th>
     <th><%= book.opinion %></th><br>
    <% end %>
   </tbody>
   </div>
   </div>
  </div>